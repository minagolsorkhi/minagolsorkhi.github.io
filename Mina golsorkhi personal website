    <!-- JavaScript for Auto-Sliding -->
    <script>
        function createAutoSlider(sliderId, slideWidth, slideMargin, duration) {
            const slider = document.getElementById(sliderId);
            if (!slider) return;

            let currentPosition = 0;
            const allSlides = Array.from(slider.children);
            const uniqueSlideCount = allSlides.length / 2; 
            
            const totalSlideWidth = slideWidth + slideMargin;
            const stepSize = totalSlideWidth;

            allSlides.forEach(slide => {
                slide.style.marginLeft = `${slideMargin}px`;
                slide.style.minWidth = `${slideWidth}px`;
                slide.style.height = (sliderId === 'book-slider' ? '200px' : '220px');
            });
            
            slider.parentElement.style.paddingRight = `${slideMargin}px`;

            function slide() {
                currentPosition += stepSize;
                slider.style.transition = `transform ${duration}ms linear`;
                slider.style.transform = `translateX(-${currentPosition}px)`;

                if (currentPosition >= uniqueSlideCount * totalSlideWidth) {
                    setTimeout(() => {
                        currentPosition = 0;
                        slider.style.transition = 'none';
                        slider.style.transform = `translateX(0)`;
                        slider.offsetHeight; 
                    }, duration);
                }
            }

            setInterval(slide, duration + 100); 
        }

        // 1. Professional Images Slider 
        createAutoSlider('pro-slider', 150, 10, 4000);

        // 2. Books Slider
        createAutoSlider('book-slider', 130, 10, 4200);

    </script>
